<div class="d-flex flex-row bd-highlight mb-3">
  <h1 class="bd-highlight">Categorias</h1>
  <%= link_to 'Voltar', root_path, class: "m-3 bd-highlight" %>
</div>

<% if @categories.any? %>
  <table class="table table-striped table-edit">
    <thead>
      <tr>
        <th>Nome</th>
        <% if current_user.role == 'admin' %>
          <th>Usuário</th>
        <% end %>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <% if current_user.role == 'admin' %>
            <td>
              <%= category.user.name %>
            </td>
          <% end %>
          <td>
            <%= link_to edit_category_path(category) do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to category, method: :delete, data: { confirm: 'Tem certeza?' } do %>
              <i class="fas fa-times-circle red"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  Não há categoria cadastrada
<% end %>

<br>

<%= link_to new_category_path, class: "btn btn-success btn-margin-bottom" do %>
  Nova Categoria
<% end %>
