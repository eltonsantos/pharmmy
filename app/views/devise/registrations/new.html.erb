<div class="app">
  <section class="section pb-0 bg-gradient-info main-section">
    <div class="container">
      <div class="row row-grid align-items-center">
        <div class="col-md-6 order-lg-2 ml-lg-auto">   
          <%= image_tag("logo.svg", class: "logo img-fluid img-center") %>
        </div>
        <div class="col-lg-6 order-lg-1 mt-0">
          <div class="card bg-gradient-secondary shadow shadow-lg--hover mt-5">

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "card-body p-lg-5"}) do |f| %>
              <%= f.error_notification %>

              <h4 class="mb-1">Registrar</h4>

              <p class="mt-0">FaÃ§a o registro para entrar como visitante na PharmMy - Minha farmacinha pessoal.</p>

              <div class="form-group mt-5">
                <div class="input-group input-group-alternative">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email", class: "form-control" },
                              label: false,
                              placeholder: "Digite o e-mail de acesso" %>

                </div>
              </div>
              <div class="form-group">
                <div class="input-group input-group-alternative">
                  <%= f.input :password,
                              required: true,
                              label: false,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { autocomplete: "new-password", class: "form-control" },
                              placeholder: "Digite a senha de acesso" %>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group input-group-alternative">
                  <%= f.input :password_confirmation,
                              required: true,
                              label: false,
                              input_html: { autocomplete: "new-password", class: "form-control" },
                              placeholder: "Digite a novamente senha de acesso" %>
                </div>
              </div>

              <%= f.button :submit, "Registrar", class: "btn btn-success btn-round btn-block btn-lg" %>
              <div class="divisor">ou</div>
              <%= link_to "Entrar", new_session_path(resource_name), class: "btn btn-primary btn-round btn-block btn-lg" %>
            <% end %>
          </div>
        </div>
        
      </div>
      <div class="row row-grid">
        <div class="col-md-8 order-lg-2 ml-lg-auto align-items-center assinatura">
          Desenvolvido por 
          <%= link_to "Elton Santos", "https://eltonsantos.netlify.app/", target: '_blank' %>
          <%= link_to "https://www.linkedin.com/in/eltonmelosantos/", target: '_blank' do %>
            <i class="fab fa-linkedin"></i>
          <% end %>
          <%= link_to "https://github.com/eltonsantos", target: '_blank' do %>
            <i class="fab fa-github"></i>
          <% end %>
          <%= mail_to "eltonaxl@hotmail.com" do %>
            <i class="fas fa-envelope-square"></i>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>